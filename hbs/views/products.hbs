<h1>{{title}}</h1>

{{#if products}}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Producto</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        {{#each products}}
        <tr>
            <td>
                {{this.title}}
            </td>
            <td>
                {{this.price}}
            </td>
            <td>
                <img src="{{this.thumbnail}}" class="img-thumbnail" alt="Responsive image"/>
            </td>
            <td>
                
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class="alert alert-danger">no se encontraron datos</h1>
{{/if}}

<a href="/">
   <input type="button" value="Create New Product" />
</a>